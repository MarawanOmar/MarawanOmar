#include <bits/stdc++.h>
using namespace std;
#define ll long long
int countBits(int x) {
    int cnt = 0;
    while (x) {
        cnt += (x & 1);
        x >>= 1;
    }
    return cnt;
}
bool isknown(ll n,int i)
{
    return (n>>i)&1;
}
ll setbit(ll n,int i)
{
    return n|(1<<n);
}
ll resetbit(ll n,int i)
{
    return n&(~(1<<i));
}
ll flip(ll n,int i)
{
    return n^(1<<i);
}
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
     int q;cin >> q;
     while(q--)
     {
         int n; cin >> n;
         map<string,int>wordMask;
         vector<string>list[3];
         for (int i = 0; i < 3; i++) {
            for (int j = 0; j < n; j++) {
                string w;
                cin >> w;
                lists[i].push_back(w);
                wordMask[w] |= (1 << i);
            }
        }
 
        int score[3] = {0, 0, 0};
 
        for (const auto& entry : wordMask) {
            int mask = entry.second;
            int cnt = countBits(mask);
            if (cnt == 1) {
                for (int p = 0; p < 3; p++) {
                    if (mask & (1 << p)) {
                        score[p] += 3;
                        break;
                    }
                }
            } else if (cnt == 2) {
                for (int p = 0; p < 3; p++) {
                    if (mask & (1 << p)) {
                        score[p] += 1;
                    }
                }
            }
        }
        cout << score[0] << " " << score[1] << " " << score[2] << "\n";
    }
 
    return 0;
}
